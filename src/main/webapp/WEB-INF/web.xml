        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AdminAuthenticationFilter</filter-name>
        <filter-class>com.Songzhiyong.filter.AdminAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthenticationFilter</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>FrontEndAuthenticationFilter</filter-name>
        <filter-class>com.Songzhiyong.filter.FrontEndAuthenticationFilter</filter-class>
    </filter>
